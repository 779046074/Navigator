<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="add_item"
                />

            <Button
                android:id="@+id/remove"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="remove_item"
                />

        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_main"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            />

        <com.bobomee.android.navigator.view.TabContainer
            android:id="@+id/tab_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="10dp"
            />

        <include layout="@layout/include_in_xml"/>

        <com.bobomee.android.navigator.view.TabContainer
            android:id="@+id/tab_container1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@android:color/white"
            android:elevation="10dp"
            />

        <com.bobomee.android.navigator.view.TabContainer
            android:id="@+id/tab_container2"
            android:layout_below="@id/tab_container"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:elevation="10dp"
            />

    </LinearLayout>


</ScrollView>
